# EditorConfig is awesome: https://EditorConfig.org

# 顶级 EditorConfig 配置
root = true

# 所有文件的默认配置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Vue 文件特殊配置
[*.vue]
indent_style = space
indent_size = 2

# TypeScript/JavaScript 文件
[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2

# JSON 文件
[*.json]
indent_style = space
indent_size = 2

# Markdown 文件
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# CSS/SCSS 文件
[*.{css,scss,less}]
indent_style = space
indent_size = 2

# HTML 文件
[*.html]
indent_style = space
indent_size = 2

# YAML 文件
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Shell 脚本
[*.{sh,bash}]
indent_style = space
indent_size = 2
end_of_line = lf

# Python 文件
[*.py]
indent_style = space
indent_size = 4

# Java 文件
[*.java]
indent_style = space
indent_size = 4

# XML 文件
[*.xml]
indent_style = space
indent_size = 2
